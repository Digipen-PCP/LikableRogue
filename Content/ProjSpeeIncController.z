class ProjSpeIncController : ZilchComponent
    {
    var PlayerCog : Cog = null;
    var LevelCog : Cog = null;
    function Initialize(init : CogInitializer)
        {
        this.LevelCog = this.Space.FindObjectByName("LevelManager");
        this.PlayerCog = this.Space.FindObjectByName("Player");
        Zero.Connect(this.Owner, Events.CollisionStarted, this.OnCollisionStarted);
        //Zero.Connect(this.Space, Events.LogicUpdate, this.OnLogicUpdate);
        }
    function OnLogicUpdate(event : UpdateEvent)
        {
        }
    function OnCollisionStarted(event : CollisionEvent)
        {
        if (event.OtherObject.Name == "Player")
            {
            this.PlayerCog.PlayerController.ProMoveSpeed+=4;
            this.PlayerCog.PlayerController.Pjtl_Damage*=2;
            this.LevelCog.LevelController.DynamicDifficulty += 0.03;
            //Console.WriteLine(this.PlayerCog.PlayerController.Pjtl_Damage);
            this.Owner.Destroy();
            }
        }
}
